model ListItem {
  id      Int     @id @default(autoincrement())
  item    String
  checked Boolean @default(false)
  userId  Int
  users   users   @relation(fields: [userId], references: [id])
}

model storage {
  id     Int    @id @default(autoincrement())
  item   String
  category String[]
  userId Int
  users  users  @relation(fields: [userId], references: [id])
}
